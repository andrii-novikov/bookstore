.container
  %h1.text-center Welcome to Bookstore!
  %br
  .carousel.slide#popular{data:{ride:'carousel',interval:20000000}}
    .carousel-inner{role:'listbox'}
      -@popular_books.each_with_index do |book,i|
        .item{class:i==0?'active':''}
          .row
            .col-sm-8.col-sm-push-2
              %h2
                =book.title
                %small= link_to book.author.title, book.author
          .row
            .col-sm-4
              =image_tag book.image, class:['image']
            .col-sm-8
              .row.description
                =book.description
              .row
                %div.price
                  %b$#{book.price}
                %form.add-to-cart.form.form-inline
                  .input-group
                    %input.form-control{type:'number',min:1, max:20, value: 1}
                    .input-group-btn
                      %button.btn.btn-primary
                        %span.glyphicon.glyphicon-shopping-cart
    %a.left.carousel-control{href:'#popular', role:'button', 'data-slide': 'prev'}
      %span.glyphicon.glyphicon-chevron-left{'aria-hidden':true}
      %span.sr-only Previous
    %a.right.carousel-control{href:'#popular', role:'button', 'data-slide': 'next'}
      %span.glyphicon.glyphicon-chevron-right{'aria-hidden':true}
      %span.sr-only Next