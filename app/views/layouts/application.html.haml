!!!
%html
  %head
    %title Bookstore
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = favicon_link_tag 'favicon.ico'
  %body
    .container
      %nav.navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle.collapsed{type:'button', data: {toggle:'collapse', target: '#navbar'}, aria:{expanded:'false', controls: 'navbar'}}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href:'/'}
              = image_tag '/images/logo.png', height: '40px'
          .navbar-collapse.collapse#navbar
            %ul.nav.navbar-nav
              -categories.each do |category|
                %li
                  =link_to category.name, category_path(category.id)
            %ul.nav.navbar-nav.navbar-right
              -if user_signed_in?
                %li
                  =link_to 'Cart', '#'
                %li
                  =link_to 'Profile', persons_profile_path
                %li
                  =link_to 'Log out', destroy_user_session_path, method: :delete
              -else
                %li
                  =link_to 'Sign In', new_user_session_path
    .container
      = yield