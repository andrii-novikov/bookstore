!!!
%html
  %head
    %title= t(:title)
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = favicon_link_tag 'favicon.ico'
  %body
    =notice
    .container
      %nav.navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle.collapsed{type:'button', data: {toggle:'collapse', target: '#navbar'}, aria:{expanded:'false', controls: 'navbar'}}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href:'/'}
              = image_tag '/images/logo.png', height: '40px'
          .navbar-collapse.collapse#navbar
            %ul.nav.navbar-nav
              %li.dropdown
                %a.dropdown-toggle{data:{toggle:"dropdown"}, href:"#"}
                  =t(:'menu.categories')
                  %span.caret
                %ul.dropdown-menu
                  -categories.each do |category|
                    %li
                      =link_to category.name, category
            %ul.nav.navbar-nav.navbar-right
              %li.cart-link
                =render 'layouts/cart_text'
              -if user_signed_in?
                %li
                  =link_to t('menu.profile'), user_path
                %li
                  =link_to t('menu.logout'), destroy_user_session_path, method: :delete
              -else
                %li
                  =link_to t('menu.signin'), new_user_session_path
                %li
                  =link_to t('menu.signup'), new_user_registration_path
    .container
      -unless breadcrumbs.empty?
        %ol.breadcrumb
          =render_breadcrumbs :tag => :li, :separator => ""
      = yield