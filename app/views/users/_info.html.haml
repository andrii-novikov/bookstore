.row
  .col-md-10.col-md-push-1
    %b= t '.title.email'
    %span= @user.email
.row
  .col-md-1
  -if @user.billing_address
    .col-md-3
      %h3= t '.title.billing'
      =@user.billing_address

  -if @user.shipping_address
    .col-md-3
      %h3= t '.title.shipping'
      =@user.shipping_address

  -if @user.credit_card
    .col-md-3
      %h3= t '.title.credit'
      =@user.credit_card